<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"-->
    <!--android:background="@null">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#11cd6e">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_location_school"
            android:src="@mipmap/location"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/sousuo"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/corners_sousuo"
            android:layout_toRightOf="@+id/iv_location_school"
            android:layout_alignRight="@+id/fenlei"
            android:layout_marginRight="39dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="请输入宝贝关键词或@用户名"
            android:textSize="12sp"
            android:textColor="#8a8a8a"/>
        <!--android:textColor="#222222"-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_location_school"
            android:src="@mipmap/search_000000_64" />

        <Button
            android:id="@+id/fenlei"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
           android:background="@mipmap/fenlei"/>

    </RelativeLayout>

<!--</RelativeLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="1"
            android:background="#97d9ffe8">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">
                <TextView
                    android:id="@+id/firstTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最热的"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_after"
                    android:textStyle="bold"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:gravity="center">
               <TextView
                   android:id="@+id/secondTitle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:text="最新的"
                   android:textColor="@color/text_color_before"
                   android:textSize="15sp"
                   android:textStyle="bold"/>
           </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#97d9ffe8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/line"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/light_green"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_changePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>