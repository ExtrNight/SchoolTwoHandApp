<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/button_container_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_home"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:drawableTop="@drawable/home_select"
            android:text = "@string/home"
            android:textSize="10sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_container_group"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/group_select"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:background="#ffffff"
            android:text = "@string/group"
            android:textSize="10sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_container_public"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_weight="1">

/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_container_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/message_select"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:background="#ffffff"
            android:text="@string/message"
            android:textSize="10sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_container_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:drawableTop="@drawable/me_select"
            android:background="#ffffff"
            android:text= "@string/me"
            android:textSize="10sp"/>
    </RelativeLayout>
</LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above = "@id/bottom_navigation">

    </FrameLayout>
    <!--将按钮置于最上面  ：layout_above-->
    <Button
        android:id="@+id/button_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:paddingBottom="2dip"
        android:paddingTop="12dip"
        android:text="发布"
        android:layout_above="@+id/bottom_navigation"

        android:drawableTop="@mipmap/publish_a"
        android:textSize="10sp"
        />
</RelativeLayout>
