<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context="com.school.twohand.activity.taoquan.CreateTaoquanDynamicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_gray">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finish"
            android:src="@mipmap/btn_return"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布动态"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_publish_dynamic"
            android:text="发布"
            android:textColor="#00bb9c"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingLeft="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_circle_dynamic_title"
            android:hint="想聊聊什么话题呢..."
            android:background="@null"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lines="1"
            android:maxLength="40"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/background_gray"/>/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_circle_dynamic_content"
            android:background="@null"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:hint="请描述下话题内容"
            android:textSize="16sp"
            android:lines="5"
            android:maxLines="10"
            android:paddingRight="6dp"/>

        <!--<ImageView-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:src="@mipmap/add_photo"-->
            <!--android:id="@+id/iv_circle_dynamic_image"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="15dp"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/iv_photo1"
                android:scaleType="fitCenter"
                android:layout_marginBottom="15dp"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/iv_photo2"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@id/iv_photo1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/iv_photo2"
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_photo3"
                android:scaleType="fitCenter"
                android:layout_marginBottom="15dp"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/iv_photo3"
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_photo4"
                android:scaleType="fitCenter"
                android:layout_marginBottom="15dp"
                android:visibility="gone" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/iv_photo4"
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_photo5"
                android:scaleType="fitCenter"
                android:layout_marginBottom="15dp"
                android:visibility="gone" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/add_photo"
                android:layout_toRightOf="@id/iv_photo5"
                android:layout_alignTop="@+id/iv_photo5"
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_add_photo"
                android:scaleType="fitCenter"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
