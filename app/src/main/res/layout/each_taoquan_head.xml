<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/iv_taoquan_bg"
                android:src="@mipmap/each_taoquan_bg"
                android:scaleType="fitXY"/>
            <!---->
            <!--android:background="@mipmap/each_taoquan_bg"-->
            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:id="@+id/iv_each_taoquan_image"
                android:src="@mipmap/upload_circle_image"
                android:layout_alignParentBottom="true"
                android:layout_margin="11dp"
                android:padding="2dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_each_taoquan_name"
                android:text="淘圈名"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/iv_each_taoquan_image"
                android:layout_alignTop="@+id/iv_each_taoquan_image"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_each_taoquan_goodsNum"
                android:layout_below="@+id/tv_each_taoquan_name"
                android:layout_alignLeft="@+id/tv_each_taoquan_name"
                android:text="发布数 2205"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_marginTop="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_each_taoquan_popularity"
                android:layout_alignBottom="@+id/tv_each_taoquan_goodsNum"
                android:layout_toRightOf="@+id/tv_each_taoquan_goodsNum"
                android:text="人气 000000"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/LL_1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/heat_11cd6e"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热度"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/LL_1_time"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_by_time_11cd6e_32"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/LL_2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chat_11cd6e"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/LL_3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/taoquan_dynamic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/background_gray"/>

    </LinearLayout>




</LinearLayout>