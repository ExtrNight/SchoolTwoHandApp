<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorViewpage"
    tools:context="com.school.twohand.activity.OrderDetailActivity2">


    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorViewpage"

        >
        <ImageView
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>
<ScrollView
    android:id="@+id/sc_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_toolbar">
 <LinearLayout
    android:id="@+id/li_order"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <RelativeLayout
         android:id="@+id/rl_order_image"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv_background1"
             android:layout_width="match_parent"
             android:layout_height="155dp"
             android:src="@mipmap/five2"
             android:scaleType="fitXY"
             />

         <ImageView
             android:id="@+id/iv_background2"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:src="@mipmap/one2"
             android:scaleType="fitXY"
             />

         <ImageView
             android:id="@+id/iv_background3"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:src="@mipmap/two2"
             android:scaleType="fitXY"
             />
         <ImageView
             android:id="@+id/iv_background4"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:src="@mipmap/three2"
             android:scaleType="fitXY"
             />
         <ImageView
             android:id="@+id/iv_background5"
             android:layout_width="match_parent"
             android:layout_height="160dp"
             android:src="@mipmap/four2"
             android:scaleType="fitXY"
             />

         <TextView
             android:id="@+id/tv_orderState"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:textSize="15dp"
             android:text="等待买卖双方见面交易，请仔细验货确认"
             android:layout_marginTop="90dp"
             android:layout_marginLeft="12dp"/>

         <TextView
             android:id="@+id/tv_timeState"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_orderState"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:text="9天23时59分后，您仍未确认收货，系统会自动确认，钱款会打到您的支付宝账户里"
             android:textColor="@color/white"
             android:textSize="12dp"
             android:layout_marginTop="8dp"/>

     </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sell"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:background="#f9f3f3">
        <RelativeLayout
            android:id="@+id/li_sell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
              <TextView
                android:id="@+id/tv_rechieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人：小陈"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                 />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:text="江苏省苏州市吴中区苏州工业园区独墅湖高教区文萃广场学生公寓c区"
                android:layout_marginLeft="12dp"
                android:textSize="13dp"
                android:layout_below="@+id/tv_rechieve"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="18965579876"
                android:textSize="13dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="15dp"/>

            <View
                android:id="@+id/view1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d9d5d5"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/view6"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="270dp"
                />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d5d5"
                android:layout_below="@+id/tv_phoneNumber"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />

            <ImageView
                android:id="@+id/iv_say"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignTop="@+id/tv_address"
                android:layout_toRightOf="@+id/view1"
                android:layout_margin="5dp"
                android:src="@mipmap/say"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系买家"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/iv_say"
                android:textColor="@color/black"
                android:layout_marginTop="53dp"/>


       </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d5d5"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />


    </RelativeLayout>

     <RelativeLayout
         android:id="@+id/rl_bottom"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#f9f3f3"
         android:layout_marginTop="8dp">

         <RelativeLayout
             android:id="@+id/rl_goodImage"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="88dp">

             <ImageView
                 android:id="@+id/iv_goodImage"
                 android:layout_width="67dp"
                 android:layout_height="67dp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="15dp"/>
             <TextView
                 android:id="@+id/tv_text_title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="小米手机卖"
                 android:textSize="13dp"
                 android:textColor="@color/black"
                 android:layout_toRightOf="@+id/iv_goodImage"
                 android:layout_alignTop="@+id/iv_goodImage"
                 android:layout_marginLeft="27dp"/>
             <TextView
                 android:id="@+id/tv_text_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="13dp"
                 android:text="售出价格"
                 android:layout_below="@+id/tv_text_title"
                 android:layout_alignLeft="@+id/tv_text_title"
                 android:layout_marginTop="30dp"/>

             <TextView
                 android:id="@+id/tv_sum_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="13dp"
                 android:text="1332.23"
                 android:layout_below="@+id/tv_text_title"
                 android:layout_alignLeft="@+id/tv_text_title"
                 android:layout_marginTop="30dp"
                 android:visibility="gone"/>


             <TextView
                 android:id="@+id/tv_Price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="13dp"
                 android:text="￥1332.23"
                android:layout_alignBottom="@+id/tv_text_price"
                 android:layout_marginLeft="285dp"
                 />

             <View
                 android:id="@+id/view3"
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="#d9d5d5"
                 android:layout_alignLeft="@+id/tv_text_price"
                 android:layout_alignRight="@+id/tv_Price"
                 android:layout_alignParentBottom="true"
                 />
         </RelativeLayout>

         <LinearLayout
             android:id="@+id/li_sum"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="43dp"
             android:layout_below="@+id/rl_goodImage">
             <TextView
                 android:id="@+id/tv_text_sum"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="合计"
                 android:textSize="13dp"
                 android:textColor="@color/black"
                 android:layout_marginLeft="109dp"
                 android:layout_gravity="center"/>

             <TextView
                 android:id="@+id/tv_sum"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/red"
                 android:textSize="16dp"
                 android:text="￥1332.23"
                 android:layout_alignBottom="@+id/tv_text_price"
                 android:layout_gravity="center"
                 android:layout_marginLeft="150dp"
                 />

             <View
                 android:id="@+id/view5"
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="#d9d5d5"
                 android:layout_alignLeft="@+id/tv_text_price"
                 android:layout_alignRight="@+id/tv_Price"
                 android:layout_alignParentBottom="true"
                 />
         </LinearLayout>
         <View
             android:id="@+id/view4"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="#d9d5d5"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:layout_below="@+id/li_sum"
             />

<RelativeLayout
    android:id="@+id/rl_detail"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#f9f3f3"
    android:layout_below="@+id/view4"
    >
    <TextView
        android:id="@+id/tv_text_sellName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/view"
        android:textSize="13dp"
        android:text="卖家昵称"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_sell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/view"
        android:text="爆炸气"
        android:layout_alignBottom="@+id/tv_text_sellName"
        android:layout_toRightOf="@+id/tv_text_sellName"
        android:layout_marginLeft="42dp"/>

    <TextView
        android:id="@+id/tv_text_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/view"
        android:textSize="13dp"
        android:text="订单编号"
        android:layout_below="@+id/tv_text_sellName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/view"
        android:text="2555674281581697"
        android:layout_alignTop="@+id/tv_text_orderId"
        android:layout_toRightOf="@+id/tv_text_orderId"
        android:layout_marginLeft="42dp"/>





</RelativeLayout>



     </RelativeLayout>



 </LinearLayout>

</ScrollView>

<RelativeLayout
    android:id="@+id/rl_endBottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="#f9f3f3">

    <Button
    android:id="@+id/btn1"
    android:layout_width="163dp"
    android:layout_height="37dp"
    android:layout_marginLeft="10dp"
    android:textSize="13dp"
    android:layout_centerVertical="true"
    android:text="查看钱款去向"
    android:background="@color/button"    />

    <Button
        android:id="@+id/btn2"
        android:layout_width="163dp"
        android:layout_height="37dp"
        android:layout_toRightOf="@+id/btn1"
        android:layout_marginLeft="32dp"
        android:textSize="13dp"
        android:layout_centerVertical="true"
        android:text="查看评价"
        android:background="@color/mainColor"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_toRightOf="@+id/btn1"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textSize="13dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="我要付款"
        android:background="@color/mainColor"
        />

</RelativeLayout>
</RelativeLayout>
