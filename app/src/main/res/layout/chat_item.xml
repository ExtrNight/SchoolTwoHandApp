<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <RelativeLayout
        android:id="@+id/leftRel"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/leftImage"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/textA"
            android:textColor="#000000"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/leftImage"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="hello A"/>
        <TextView
            android:id="@+id/userA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户A"
            android:textColor="#000000"
            android:layout_below="@+id/leftImage"
            android:layout_alignLeft="@+id/leftImage"/>
        <TextView
            android:id="@+id/timeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:0:0"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/textA"
            android:layout_alignTop="@+id/userA"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rightRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rightImage"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/textB"
            android:textColor="#000000"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rightImage"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textSize="15sp"
            android:text="hello B"/>

        <TextView
            android:id="@+id/userB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户B"
            android:textColor="#000000"
            android:layout_below="@+id/rightImage"
            android:layout_alignRight="@+id/rightImage"/>
        <TextView
            android:id="@+id/timeB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:0:0"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/textB"
            android:layout_alignTop="@+id/userB"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffffff"/>

</LinearLayout>