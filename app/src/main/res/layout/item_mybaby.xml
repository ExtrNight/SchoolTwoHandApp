<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_babyP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_babyTitle"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="精品小米手机，8成新，5折出售"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:gravity="center|left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            />


        <TextView
            android:id="@+id/tv_babyPrice1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="￥1024.5"
            android:textColor="#fa0505"
            android:textSize="14dp"
            android:layout_below="@+id/tv_babyTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/image_baby"
            android:paddingLeft="0dp"
            android:layout_below="@+id/tv_babyPrice1"
            android:layout_marginTop="15dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LL"
                android:orientation="horizontal">
             </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/li_babyPriase"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/image_baby">
            <TextView
                android:id="@+id/tv_babyPriase"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="123 赞"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_babySay"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="321 留言"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:id="@+id/tv_babyTime"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="90天展示时间"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:background="#d9d5d5"
            android:layout_height="0.2dp"
            android:layout_below="@+id/li_babyPriase"/>

        <LinearLayout
            android:id="@+id/li_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/view1">
            <Button
                android:id="@+id/btn_write"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:background="@drawable/setbar_bg"
                android:layout_gravity="center_vertical"
                android:text="编辑"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="80dp">

            </Button>

            <Button
                android:id="@+id/btn_share"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:background="@drawable/setbar_bg"
                android:layout_marginLeft="13dp"
                android:text="分享"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"

                />

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:background="@drawable/setbar_bg"
                android:text="删除"
                android:textSize="14dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"

                />
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>