<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.twohand.activity.MyInforActivity">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorViewpage"
        >
        <ImageView
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资料"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/bigSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorViewpage"

                >

                <RelativeLayout
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white">

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textSize="14dp"
                    android:layout_below="@+id/progressbar"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:id="@+id/rl_headImg"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/progressbar"
                    android:layout_marginTop="70dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="头像"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>

                    <ImageView
                        android:id="@+id/iv_headimg1"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="60dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"
                        />

                    <com.school.twohand.utils.CircleImageView
                        android:id="@+id/iv_headimg2"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="60dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/ceshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/view"
                    android:layout_below="@+id/rl_headImg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />



                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:layout_marginTop="17dp"/>


                    <TextView
                        android:id="@+id/checksex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="120dp"
                        android:textColor="@color/view"/>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />


                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/view"
                    android:layout_below="@+id/rl_sex"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_birth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view2"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生日"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"/>


                    <TextView
                        android:id="@+id/checkbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-10-24"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="120dp"
                        android:textColor="@color/view"/>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />


                </RelativeLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/view"
                    android:layout_below="@+id/rl_birth"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />



                <RelativeLayout
                    android:id="@+id/rl_noaddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view3"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常住"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"/>


                    <TextView
                        android:id="@+id/checknoaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江苏省苏州市"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="120dp"
                        android:textColor="@color/view"/>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />


                </RelativeLayout>
                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/view"
                    android:layout_below="@+id/rl_noaddress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_getaddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view4"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:layout_marginTop="17dp"/>




                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />


                </RelativeLayout>
                <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/view"
                    android:layout_below="@+id/rl_getaddress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view5"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人简绍"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:layout_marginTop="17dp"/>

                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginLeft="120dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:textSize="14dp"
                        android:text="要想让我低头，除非你跪下！"/>

                    <ImageView
                        android:id="@+id/iv_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/go"
                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
