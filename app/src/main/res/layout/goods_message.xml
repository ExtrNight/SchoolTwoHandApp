<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/user_head_t"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/user_name_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/user_head_t"
            android:layout_alignBottom="@+id/user_head_t"
            android:text="用户名"
            />
        <TextView
            android:id="@+id/goods_price_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="17dp"
            android:textColor="#ff0015"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="15sp"
            android:text="￥500"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/goods_image_t"
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/goods_text_t"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="发展来源人的眼睛看到的颜色有两种： ⒈ 一种是发光体发出的颜色，比如计算机显示器屏幕显示的颜色"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/user_school_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="#FFB6C1"
            android:text="贵校丶仰恩"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/amoy_circle_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/user_school_t"
            android:textColor="#FFB6C1"
            android:text="淘圈丨仰恩微淘"/>
        <TextView
            android:id="@+id/message_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="留言4"/>

        <TextView
            android:id="@+id/like_t"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/message_t"
            android:layout_alignTop="@+id/message_t"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="点赞5"/>



    </RelativeLayout>

</LinearLayout>