<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/user_head_m"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/user_name_m"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/user_head_m"
            android:layout_alignBottom="@+id/user_head_m"
            android:text="用户名"
            />
        <TextView
            android:id="@+id/goods_price_m"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:textColor="#ff0015"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17sp"
            android:text="￥500"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/detail_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="我是详情"/>
        <ImageView
            android:id="@+id/image_a_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_b_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:visibility="gone"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_c_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:visibility="gone"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_d_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_e_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="15dp"

        >
        <TextView
            android:id="@+id/readNumber_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="浏览：777"
            />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/readNumber_m"
            android:layout_alignTop="@+id/readNumber_m"
            android:text="  "/>
        <TextView
            android:id="@+id/likeNumber_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/point"
            android:layout_alignTop="@+id/point"
            android:textColor="#FFB6C1"
            android:text="点赞：323"/>
        <ImageView
            android:id="@+id/image_h_c_m"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/likeNumber_m"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/image_h_b_m"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/image_h_c_m"
            android:layout_alignTop="@+id/image_h_c_m"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/image_h_a_m"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/image_h_b_m"
            android:layout_toLeftOf="@+id/image_h_b_m"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/amoy_name_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeNumber_m"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#FFB6C1"
            android:text="淘圈|微淘"/>
    </RelativeLayout>

</LinearLayout>